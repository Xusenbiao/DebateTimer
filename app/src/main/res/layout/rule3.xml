<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rule3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rulebk">

    <Button
        android:id="@+id/title"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/dbframe"
        android:gravity="center"
        android:text="具体环节"
        android:textSize="27sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/allrule">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方一辩立论：x分钟 反四质询正一：x分钟"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反方一辩立论：x分钟 正四质询反一：x分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反方二辩驳论：x分钟 正方三辩盘问：x分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方二辩驳论：x分钟 反方三辩盘问：x分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方三辩小结：x分钟 反方三辩小结：x分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双方自由辩论：各自计时4分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反方四辩结辩：x分钟 正方四辩结辩：x分钟"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allrule"
        android:layout_centerHorizontal="true"
        android:text="确认"
        android:id="@+id/ok"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@mipmap/dbstyle"/>


</RelativeLayout>